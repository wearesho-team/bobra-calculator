{
  "name": "react-credit-calculator",
  "version": "1.0.0-rc1.5",
  "description": "Credit calculator based on rc-slider",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "cross-env nyc mocha -r jsdom-global/register -r ts-node/register -r source-map-support/register -r tests/bootstrap.ts tests/**.ts tests/**.tsx",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack",
    "dev": "./node_modules/.bin/webpack-dev-server",
    "coverage": "./node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "./node_modules/.bin/tslint --project . --exclude ./node_modules/* --exclude ./build/**.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearesho-team/react-credit-calculator.git"
  },
  "author": "Wearesho - Alexander Letnikow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wearesho-team/react-credit-calculator/issues"
  },
  "homepage": "https://github.com/wearesho-team/react-credit-calculator#readme",
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/chai-enzyme": "^0.6.3",
    "@types/enzyme": "^2.8.12",
    "@types/mocha": "^2.2.43",
    "@types/prop-types": "^15.5.1",
    "@types/rc-slider": "^8.1.1",
    "@types/react": "^16.0.5",
    "awesome-typescript-loader": "^3.2.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.1",
    "chai-enzyme": "^0.8.0",
    "circular-dependency-plugin": "^4.2.0",
    "clean-webpack-plugin": "^0.1.16",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jsdom": "^11.2.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.5.3",
    "nyc": "^11.1.0",
    "pre-commit": "^1.2.2",
    "prop-types": "^15.5.10",
    "rc-slider": "^8.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^15.6.1",
    "source-map-loader": "^0.2.1",
    "source-map-support": "^0.4.18",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.7.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.8.2",
    "webpack-node-externals": "^1.6.0"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^16.0",
    "rc-slider": "^8.3.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude:": [
      "**/*.d.ts",
      "webpack.config.js",
      "codecept.conf.js",
      "tests"
    ],
    "reporter": [
      "clover",
      "text-summary"
    ],
    "report-dir": "./tests/output"
  },
  "pre-commit": [
    "lint"
  ]
}
